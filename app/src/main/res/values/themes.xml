<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwitterClone" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/twitter_logo_blue</item>
        <item name="colorPrimaryVariant">@color/twitter_dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/twitter_dark_blue</item>
        <!-- text color on the action bar -->
        <item name="titleTextColor">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/white</item>
        <!-- customize the text of an option menu
        <item name="android:itemTextAppearance">@style/customTextMenu</item> -->
        <!-- customize the 3 dots of the action bar
        <item name="actionOverflowButtonStyle">@style/IconOverflow</item> -->
        <!-- change the color of text menu if (showAsAction="always") -->
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- change the color of the status bar -->
        <item name="colorPrimaryDark">@color/twitter_logo_blue</item>
        <!-- change the color of cursor -->
        <item name="colorAccent">@color/twitter_logo_blue</item>
    </style>

    <style name="customTextMenu" parent= "@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/twitter_logo_blue</item>
    </style>

    <style name="IconOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>
</resources>
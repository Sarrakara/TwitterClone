<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwitterClone" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/twitter_logo_blue</item>
        <item name="colorPrimaryVariant">@color/twitter_dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- change the color of text menu if (showAsAction="always") -->
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="colorAccent">@color/twitter_logo_blue</item>
        <item name="android:colorBackground">@color/black</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
        <!-- change the color of the status bar -->
        <item name="colorPrimaryDark">@color/twitter_logo_blue</item>
        <!-- change the color of cursor -->
        <item name="colorAccent">@color/twitter_logo_blue</item>
    </style>
</resources>